<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F3F7FD"
    tools:context=".Login">

    <TextView
        android:layout_width="140dp"
        android:layout_height="34dp"
        android:layout_marginTop="60dp"
        android:text="@string/let_s_sign_in"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.136"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView" />

    <TextView
        android:id="@+id/forgot_pass"
        android:layout_width="140dp"
        android:layout_height="34dp"
        android:layout_marginBottom="8dp"
        android:text="@string/forgot_password"
        android:textAlignment="center"
        android:textSize="12sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/SignIn_btn"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.859"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="140dp"
        android:layout_height="34dp"
        android:layout_marginStart="112dp"
        android:layout_marginBottom="60dp"
        android:text="Don't have an Account?"
        android:textAlignment="center"
        android:textSize="12sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView

        android:id="@+id/SignUp_Text_Btn"
        android:layout_width="74dp"
        android:layout_height="35dp"
        android:layout_marginBottom="60dp"
        android:text="SIGN UP"
        android:textAlignment="textStart"
        android:textColor="#0961F3"
        android:textSize="12sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.082"
        app:layout_constraintStart_toEndOf="@+id/textView2" />

    <EditText
        android:id="@+id/Email_input_field"
        android:paddingLeft="20dp"
        android:layout_width="335dp"
        android:layout_height="48dp"
        android:layout_marginBottom="40dp"
        android:background="@drawable/inputbtnbg"
        android:drawableLeft="@drawable/baseline_email_24"
        android:hint=" Email"
        android:pointerIcon="top_right_diagonal_double_arrow"
        app:layout_constraintBottom_toTopOf="@+id/Pass_input_field"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.486"
        app:layout_constraintStart_toStartOf="parent" />


    <EditText
        android:id="@+id/Pass_input_field"
        android:layout_width="335dp"
        android:layout_height="48dp"
        android:paddingLeft="20dp"
        android:layout_marginBottom="52dp"
        android:background="@drawable/inputbtnbg"
        android:drawableLeft="@drawable/baseline_lock_24"
        android:hint=" Password"
        android:inputType="textPassword"
        android:pointerIcon="top_right_diagonal_double_arrow"
        app:layout_constraintBottom_toTopOf="@+id/SignIn_btn"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/SignIn_btn"
        android:layout_width="333dp"
        android:layout_height="68dp"
        android:layout_marginBottom="192dp"
        android:background="#00FFFFFF"
        android:forceHasOverlappingRendering="false"
        android:foreground="@drawable/siginbtn"
        android:text="Button"
        app:icon="@drawable/ic_launcher_foreground"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.495"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/SignIn_apple_btn"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_marginEnd="124dp"
        android:layout_marginBottom="120dp"
        android:background="#00FFFFFF"
        android:forceHasOverlappingRendering="false"
        android:foreground="@drawable/applepass"
        android:text="Button"
        app:icon="@drawable/ic_launcher_foreground"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <Button
        android:id="@+id/signIn_google_btn"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_marginEnd="36dp"
        android:layout_marginBottom="120dp"
        android:background="#00FFFFFF"
        android:forceHasOverlappingRendering="false"
        android:foreground="@drawable/googleicon"
        android:text="Button"
        app:icon="@drawable/ic_launcher_foreground"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/SignIn_apple_btn"
        app:layout_constraintHorizontal_bias="0.977"
        app:layout_constraintStart_toStartOf="parent" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="270dp"
        android:layout_height="113dp"
        android:layout_marginTop="32dp"
        android:src="@drawable/logo"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.496"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>